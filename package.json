{
  "name": "llm-meter",
  "version": "0.1.0",
  "description": "Lightweight metering and observability for LLM SDKs (OpenAI, Gemini, Anthropic)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "examples": "tsx examples/run-all.ts",
    "example": "tsx",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "openai",
    "gemini",
    "anthropic",
    "claude",
    "llm",
    "metering",
    "usage",
    "billing",
    "observability",
    "tokens",
    "cost"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "openai": ">=4.0.0",
    "@google/generative-ai": ">=0.1.0",
    "@anthropic-ai/sdk": ">=0.20.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "@google/generative-ai": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@google/generative-ai": "^0.21.0",
    "@anthropic-ai/sdk": "^0.27.0",
    "dotenv": "^17.2.3",
    "openai": "^4.70.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
